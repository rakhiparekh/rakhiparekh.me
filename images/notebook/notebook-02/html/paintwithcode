       var imageObj = new Image();         
       imageObj.onload = function() {             
       context.drawImage(imageObj,x,y); 
     };
       imageObj.src="leaf-branch large.png";               
     }
         
     // draw branches of the tree
     
     function drawThickBranchOfTree(startX,startY,a,b,c,d,e,f,g,h,endX,endY)
     {
       context.beginPath();
       context.moveTo(startX,startY);
       context.lineTo(a,b);
       context.lineTo(c,d);
       context.lineTo(endX,endY);
       context.closePath();
       context.lineWidth= 8;
       context.strokeStyleStyle= "#7D4B27";
       context.stroke();
     }
         
    //  draw bigger pillar using rectangles with background showing  
      
    function drawTrialWindow (x,y,width,heigth)
    {
     context.globalAlpha= 0.1;
     context.beginPath ();
     context.rect(x,y,width,heigth);
     context.closePath();
     context.fillStyle= "white";
     context.fill();
     context.globalAlpha = 1; 
     context.lineWidth = 28;
     context. strokeStyle = "#BF5824";    
     context.stroke();
    }
         
    // trial draw rectangle for the back pillar with background showing  
           
    function drawBackPillar (x,y,width,heigth)
    {
      context.globalAlpha= 0.1;
      context.beginPath ();
      context.rect(x,y,width,heigth);
      context.closePath();
      context.fillStyle= "white";
      context.fill();
      context.globalAlpha = 1; 
      context.lineWidth = 10;
      context. strokeStyle = "#BF5824";    
      context.stroke();
    }
         
    //draw the edge of the road
    
    function drawRoadBoundary(startX,startY,x1,y1,x2,y2,endx,endy)
    {
      context.beginPath();
      context.moveTo(startX,startY);
      context.lineTo(x1,y1);
      context.lineTo(x2,y2);
      context.lineTo(endx,endy);
      context.closePath();
      context.fillStyle="#804B26";
      context.fill();
   }
      
     // draw ropes of the bridge 
       
      function drawRopes (x1,y1,x2,y2)
      {
        context.moveTo(x1,y1);
        context.lineTo(x2,y2);
        context.lineWidth=6;
        context.strokeStyle="#78370C";
        context.stroke ();
      }
                 
     
