      var canvas = document.getElementById('canvasId');
      var context = canvas.getContext('2d');
  
      var canvas2 =document.getElementById ('backgroundId');
      var context2 = canvas.getContext('2d');
  
      //draw pillars outer bigger rectangle
   
        function drawRectangle(x,y,width,heigth)
        {   
          context.beginPath();
          context.rect(x,y,width,heigth);
          context.closePath();
      
        } 
     
     //draw cross bars in the small pillar
     
       function drawDiagonalLines (X1,Y1,X2,Y2)
       {
        context.moveTo(X1,Y1);
        context.lineTo(X2,Y2);
        context.lineWidth=1;
        context.strokeStyle = "#7D4B27";
        context.stroke();
       }
         
         
      //draw the cross bars in the last rectangle of bigger pillar
         
        function drawCrossBars (startX,startY,X1,Y1,X2,Y2,endX,endY)
         { 
          context.beginPath();
          context.moveTo (startX,startY);
          context.lineTo (X1,Y1);
          context.lineTo (X2,Y2);
          context.lineTo (endX,endY);
          context.closePath();
          context.lineWidth=4;
          context.strokeStyle="#7D4B27";
          context.stroke();
          context.fillStyle = "#914C1A";
          context.fill();
         }
         
     //draw  front long arc of the bridge-bezier curve
     
      function drawFrontPipes(startX, startY,controlX1, controlY1, controlX2,controlY2, endX, endY)
       { 
        context.beginPath();
        context.moveTo(startX,startY);
        context.bezierCurveTo(controlX1, controlY1, controlX2,controlY2, endX, endY);        
        context.lineWidth = 12;
        context.strokeStyle = "#914C1A"; // line color
        context.stroke();
        
       }   
     
     //add gradient in rust
     
     function addLinearGradientRust(startX,startY,endX,endY)
      {
       var grd = context.createLinearGradient(startX,startY,endX,endY);
       grd.addColorStop(0,"#A36336"); //light rust
       grd.addColorStop(0.6,"#C73C00"); // bright rust
       grd.addColorStop(1,"#331102"); // dark rust
       context.fillStyle = grd;
       context.fill();
      }
      
      // draw the arcs of the bridge at the back 
      
      function drawQuadracticCurve (startX, startY,controlX, controlY, endX, endY)
       {
        context.beginPath();
        context.moveTo(startX, startY);
        context.quadraticCurveTo(controlX, controlY,endX,endY);       
        context.lineWidth=7;
        context.strokeStyle= "#804B26";
        context.stroke();
        }
     
     //draw the leafy branch
     
     function drawLeafBranch (x,y)
      {                       
        var imageObj = new Image();         
        imageObj.onload = function() {             
        context.drawImage(imageObj,x,y); 
      };
        imageObj.src="leaf-branch.png";               
      }
        
      // draw shorter leafy branch
        
      function drawShorterLeafBranch (x,y)
       {                       
         var imageObj = new Image();         
         imageObj.onload = function() {             
         context.drawImage(imageObj,x,y); 
       };
         imageObj.src="leaf-branch left rotation.png";               
       } 
           
       // draw smaller leafy branch
       
       function drawSmallerLeafBranch (x,y)
       {                       
        var imageObj = new Image();         
        imageObj.onload = function() {             
        context.drawImage(imageObj,x,y); 
       };
        imageObj.src="leaf-branch small.png";               
       }
     
      // draw smallest leafy branch
     
      function drawSmallestLeafBranch (x,y)
      {                       
        var imageObj = new Image();         
        imageObj.onload = function() {             
        context.drawImage(imageObj,x,y); 
