      function drawMediumLeafBranch (x,y)
      {                       
        var imageObj = new Image();         
        imageObj.onload = function() {             
        context.drawImage(imageObj,x,y); 
      };
       imageObj.src="leaf-branch copy.png";               
      }
     
     // draw large leafy branch
     
     function drawLargeLeafBranch (x,y)
     {                       
       var imageObj = new Image();         
       imageObj.onload = function() {             
       context.drawImage(imageObj,x,y); 
